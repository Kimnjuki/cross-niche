{
  "design_system_version": "2.0.0",
  "platform_identity": {
    "name": "The Grid Nexus",
    "tagline": "Premium Tech, Security & Gaming Intelligence",
    "design_philosophy": "Merge The Verge's bold modularity, Wired's editorial authority, TechCrunch's information density, and Ars Technica's technical precision into a cohesive, high-contrast dark interface with neon accents for the cybersecurity/gaming audience."
  },
  "color_palette": {
    "foundation": {
      "primary_bg": "#0A0A0B",
      "secondary_bg": "#141417",
      "tertiary_bg": "#1C1C1F",
      "elevated_surface": "#1F1F23",
      "card_bg": "#16161A",
      "card_hover": "#1A1A1E"
    },
    "accent_colors": {
      "cyber_blue": {
        "primary": "#00F0FF",
        "hover": "#00D4E6",
        "dim": "rgba(0, 240, 255, 0.15)",
        "glow": "rgba(0, 240, 255, 0.4)",
        "usage": "Security topics, CTAs, interactive elements"
      },
      "neon_pink": {
        "primary": "#FF007A",
        "hover": "#E6006D",
        "dim": "rgba(255, 0, 122, 0.15)",
        "glow": "rgba(255, 0, 122, 0.4)",
        "usage": "Gaming content, trending tags, breaking news"
      },
      "grid_green": {
        "primary": "#39FF14",
        "hover": "#33E612",
        "dim": "rgba(57, 255, 20, 0.15)",
        "glow": "rgba(57, 255, 20, 0.4)",
        "usage": "Tech innovation, positive metrics, success states"
      },
      "electric_purple": {
        "primary": "#B026FF",
        "hover": "#9D22E6",
        "dim": "rgba(176, 38, 255, 0.15)",
        "glow": "rgba(176, 38, 255, 0.4)",
        "usage": "AI/ML content, premium features"
      },
      "warning_amber": {
        "primary": "#FFB800",
        "hover": "#E6A500",
        "dim": "rgba(255, 184, 0, 0.15)",
        "glow": "rgba(255, 184, 0, 0.4)",
        "usage": "Alerts, vulnerabilities, hot topics"
      }
    },
    "text_hierarchy": {
      "hero_title": {
        "color": "#FFFFFF",
        "gradient": "linear-gradient(135deg, #FFFFFF 0%, #00F0FF 100%)",
        "usage": "H1, hero headlines"
      },
      "section_header": {
        "color": "#FFFFFF",
        "weight": "700",
        "usage": "H2, section titles"
      },
      "card_title": {
        "color": "#F5F5F7",
        "gradient_hover": "linear-gradient(135deg, #FFFFFF 0%, #FF007A 100%)",
        "usage": "H3, article titles"
      },
      "body_primary": {
        "color": "#D1D1D6",
        "line_height": "1.7",
        "usage": "Main content, article body"
      },
      "body_secondary": {
        "color": "#A1A1A8",
        "line_height": "1.6",
        "usage": "Descriptions, excerpts"
      },
      "meta_text": {
        "color": "#71717A",
        "usage": "Timestamps, author, tags"
      },
      "muted_text": {
        "color": "#52525B",
        "usage": "Placeholders, disabled states"
      }
    },
    "semantic_colors": {
      "success": "#39FF14",
      "error": "#FF4444",
      "warning": "#FFB800",
      "info": "#00F0FF",
      "link": "#00F0FF",
      "link_hover": "#00D4E6"
    },
    "borders": {
      "subtle": "#27272A",
      "medium": "#3F3F46",
      "strong": "#52525B",
      "accent_blue": "#00F0FF",
      "accent_pink": "#FF007A",
      "accent_green": "#39FF14"
    }
  },
  "typography": {
    "font_families": {
      "display": {
        "family": "'Inter Tight', 'Satoshi', -apple-system, BlinkMacSystemFont, sans-serif",
        "fallback": "system-ui, sans-serif",
        "weights": [600, 700, 800, 900],
        "variable_axis": true,
        "usage": "Headlines, hero titles, section headers"
      },
      "body": {
        "family": "'IBM Plex Sans', 'Charter', -apple-system, BlinkMacSystemFont, sans-serif",
        "fallback": "system-ui, sans-serif",
        "weights": [400, 500, 600],
        "usage": "Article body, descriptions, long-form content"
      },
      "serif_editorial": {
        "family": "'IBM Plex Serif', 'Charter', Georgia, serif",
        "fallback": "serif",
        "weights": [400, 500, 600],
        "usage": "Article body (long-form), editorial content for authority"
      },
      "mono": {
        "family": "'JetBrains Mono', 'SF Mono', 'Cascadia Code', monospace",
        "fallback": "monospace",
        "weights": [400, 500, 600],
        "usage": "Code blocks, technical metadata, timestamps"
      }
    },
    "scale": {
      "hero_display": {
        "size": "clamp(2.5rem, 5vw, 4.5rem)",
        "line_height": "1.1",
        "letter_spacing": "-0.03em",
        "font": "display",
        "weight": "800"
      },
      "h1": {
        "size": "clamp(2rem, 4vw, 3rem)",
        "line_height": "1.2",
        "letter_spacing": "-0.02em",
        "font": "display",
        "weight": "700"
      },
      "h2": {
        "size": "clamp(1.5rem, 3vw, 2rem)",
        "line_height": "1.3",
        "letter_spacing": "-0.01em",
        "font": "display",
        "weight": "700"
      },
      "h3": {
        "size": "clamp(1.25rem, 2.5vw, 1.5rem)",
        "line_height": "1.4",
        "letter_spacing": "-0.01em",
        "font": "display",
        "weight": "600"
      },
      "h4": {
        "size": "1.125rem",
        "line_height": "1.4",
        "letter_spacing": "0",
        "font": "display",
        "weight": "600"
      },
      "body_large": {
        "size": "1.125rem",
        "line_height": "1.7",
        "letter_spacing": "0",
        "font": "body",
        "weight": "400"
      },
      "body": {
        "size": "1rem",
        "line_height": "1.7",
        "letter_spacing": "0",
        "font": "body",
        "weight": "400"
      },
      "body_small": {
        "size": "0.875rem",
        "line_height": "1.6",
        "letter_spacing": "0",
        "font": "body",
        "weight": "400"
      },
      "caption": {
        "size": "0.75rem",
        "line_height": "1.5",
        "letter_spacing": "0.01em",
        "font": "mono",
        "weight": "500",
        "text_transform": "uppercase"
      }
    }
  },
  "layout_system": {
    "grid": {
      "type": "Bento Grid (Asymmetric 12-column)",
      "columns": {
        "mobile": 4,
        "tablet": 8,
        "desktop": 12
      },
      "gap": {
        "mobile": "1rem",
        "tablet": "1.5rem",
        "desktop": "2rem"
      },
      "max_width": "1440px",
      "padding": {
        "mobile": "1rem",
        "tablet": "2rem",
        "desktop": "3rem"
      }
    },
    "breakpoints": {
      "mobile": "0px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1440px",
      "ultra": "1920px"
    },
    "spacing_scale": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem"
    }
  },
  "component_library": {
    "navigation": {
      "header": {
        "background": "rgba(10, 10, 11, 0.8)",
        "backdrop_filter": "blur(16px) saturate(180%)",
        "border_bottom": "1px solid rgba(63, 63, 70, 0.5)",
        "height": "72px",
        "sticky": true,
        "z_index": 1000,
        "logo_treatment": "Gradient text with neon glow",
        "link_color": "#D1D1D6",
        "link_hover": "#00F0FF",
        "active_indicator": "2px solid #00F0FF bottom border"
      },
      "mobile_menu": {
        "background": "#141417",
        "backdrop_filter": "blur(24px)",
        "overlay": "rgba(10, 10, 11, 0.95)",
        "animation": "slide-in-right 0.3s ease"
      }
    },
    "hero_section": {
      "layout": "12-column bento grid",
      "featured_post": {
        "columns": "span 8",
        "aspect_ratio": "16:9",
        "image_overlay": "linear-gradient(180deg, transparent 0%, rgba(10, 10, 11, 0.9) 100%)",
        "hover_effect": "Scale 1.05 + neon border glow",
        "border": "1px solid rgba(0, 240, 255, 0.3)",
        "border_radius": "0px"
      },
      "side_stories": {
        "columns": "span 4",
        "stack": "2 cards vertical",
        "gap": "1.5rem",
        "hover_effect": "Accent color border pulse"
      }
    },
    "card_variants": {
      "featured_card": {
        "background": "#16161A",
        "border": "1px solid #27272A",
        "border_radius": "0px",
        "padding": "0",
        "image_treatment": "Full-width with gradient overlay",
        "hover_state": {
          "border": "1px solid #00F0FF",
          "transform": "translateY(-4px)",
          "box_shadow": "0 8px 32px rgba(0, 240, 255, 0.2)",
          "image_scale": "1.05"
        }
      },
      "standard_card": {
        "background": "#16161A",
        "border": "1px solid #27272A",
        "border_radius": "0px",
        "padding": "1.5rem",
        "hover_state": {
          "border": "1px solid #52525B",
          "background": "#1A1A1E"
        }
      },
      "minimal_card": {
        "background": "transparent",
        "border": "none",
        "border_bottom": "1px solid #27272A",
        "padding": "1rem 0",
        "hover_state": {
          "border_bottom": "1px solid #00F0FF"
        }
      },
      "glass_card": {
        "background": "rgba(255, 255, 255, 0.05)",
        "backdrop_filter": "blur(12px) saturate(150%)",
        "border": "1px solid rgba(255, 255, 255, 0.1)",
        "border_radius": "0px",
        "hover_state": {
          "background": "rgba(255, 255, 255, 0.08)",
          "border": "1px solid rgba(0, 240, 255, 0.3)"
        }
      }
    },
    "buttons": {
      "primary": {
        "background": "#00F0FF",
        "color": "#0A0A0B",
        "border": "none",
        "padding": "0.75rem 1.5rem",
        "font_weight": "600",
        "hover": {
          "background": "#00D4E6",
          "box_shadow": "0 0 20px rgba(0, 240, 255, 0.5)"
        }
      },
      "secondary": {
        "background": "transparent",
        "color": "#00F0FF",
        "border": "1px solid #00F0FF",
        "padding": "0.75rem 1.5rem",
        "font_weight": "600",
        "hover": {
          "background": "rgba(0, 240, 255, 0.1)",
          "box_shadow": "inset 0 0 20px rgba(0, 240, 255, 0.2)"
        }
      },
      "ghost": {
        "background": "transparent",
        "color": "#D1D1D6",
        "border": "1px solid #3F3F46",
        "padding": "0.75rem 1.5rem",
        "hover": {
          "color": "#FFFFFF",
          "border": "1px solid #00F0FF",
          "background": "rgba(0, 240, 255, 0.05)"
        }
      }
    },
    "tags_badges": {
      "category_tag": {
        "tech": {
          "background": "rgba(57, 255, 20, 0.15)",
          "color": "#39FF14",
          "border": "1px solid rgba(57, 255, 20, 0.3)"
        },
        "security": {
          "background": "rgba(0, 240, 255, 0.15)",
          "color": "#00F0FF",
          "border": "1px solid rgba(0, 240, 255, 0.3)"
        },
        "gaming": {
          "background": "rgba(255, 0, 122, 0.15)",
          "color": "#FF007A",
          "border": "1px solid rgba(255, 0, 122, 0.3)"
        },
        "ai": {
          "background": "rgba(176, 38, 255, 0.15)",
          "color": "#B026FF",
          "border": "1px solid rgba(176, 38, 255, 0.3)"
        }
      },
      "status_badge": {
        "breaking": {
          "background": "#FF007A",
          "color": "#FFFFFF",
          "animation": "pulse 2s infinite"
        },
        "trending": {
          "background": "#FFB800",
          "color": "#0A0A0B"
        },
        "featured": {
          "background": "#00F0FF",
          "color": "#0A0A0B"
        }
      },
      "padding": "0.375rem 0.75rem",
      "font_size": "0.75rem",
      "font_weight": "600",
      "text_transform": "uppercase",
      "letter_spacing": "0.05em",
      "border_radius": "0px"
    },
    "image_treatments": {
      "verge_overlay": {
        "gradient": "linear-gradient(45deg, rgba(0, 240, 255, 0.2) 0%, transparent 60%)",
        "blend_mode": "overlay",
        "usage": "Featured images, hero sections"
      },
      "cyberpunk_scan": {
        "gradient": "linear-gradient(180deg, transparent 0%, rgba(0, 240, 255, 0.1) 50%, transparent 100%)",
        "animation": "scan-line 3s ease-in-out infinite",
        "usage": "Security/tech content"
      },
      "neon_border": {
        "border": "2px solid",
        "border_image": "linear-gradient(135deg, #00F0FF, #FF007A, #39FF14) 1",
        "box_shadow": "0 0 20px rgba(0, 240, 255, 0.3)",
        "usage": "Premium/featured content"
      }
    },
    "feed_layouts": {
      "dense_list": {
        "inspiration": "TechCrunch",
        "gap": "1px",
        "background": "#27272A",
        "item_background": "#16161A",
        "item_padding": "1rem 1.5rem",
        "hover_background": "#1A1A1E",
        "show_thumbnail": true,
        "thumbnail_size": "80px",
        "meta_display": "inline"
      },
      "magazine_grid": {
        "inspiration": "The Verge",
        "columns": {
          "mobile": 1,
          "tablet": 2,
          "desktop": 3
        },
        "gap": "2rem",
        "card_style": "featured_card",
        "image_aspect": "16:9"
      },
      "timeline": {
        "inspiration": "Wired",
        "layout": "single-column",
        "max_width": "720px",
        "separator": "1px solid #27272A",
        "spacing": "2rem",
        "typography": "serif_editorial"
      }
    }
  },
  "page_templates": {
    "homepage": {
      "sections": [
        {
          "name": "hero",
          "layout": "bento_12_col",
          "components": ["featured_story_8col", "side_stories_4col"],
          "background": "#0A0A0B"
        },
        {
          "name": "breaking_news_ticker",
          "layout": "full_width_scroll",
          "background": "#FF007A",
          "height": "48px",
          "animation": "marquee"
        },
        {
          "name": "latest_stories",
          "layout": "magazine_grid",
          "columns": 3,
          "gap": "2rem",
          "max_items": 9
        },
        {
          "name": "category_sections",
          "layout": "horizontal_scroll_cards",
          "sections": ["tech", "security", "gaming"],
          "cards_per_section": 4
        },
        {
          "name": "editorial_longform",
          "layout": "timeline",
          "max_items": 3,
          "typography": "serif_editorial"
        }
      ]
    },
    "article_page": {
      "layout": "centered_column",
      "max_width": "720px",
      "typography": "serif_editorial",
      "sidebar": {
        "position": "sticky",
        "width": "300px",
        "components": ["toc", "related_articles", "trending"]
      },
      "header": {
        "show_category_tag": true,
        "show_author": true,
        "show_date": true,
        "show_read_time": true,
        "title_gradient": true
      }
    },
    "category_page": {
      "layout": "mixed",
      "hero": "featured_post_full_width",
      "feed": "dense_list",
      "sidebar": "glass_card_widgets"
    }
  },
  "animations": {
    "hover_scale": {
      "transform": "scale(1.05)",
      "transition": "transform 0.3s cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "hover_lift": {
      "transform": "translateY(-4px)",
      "transition": "transform 0.3s ease"
    },
    "glow_pulse": {
      "animation": "glow 2s ease-in-out infinite",
      "keyframes": {
        "0%, 100%": "box-shadow: 0 0 10px rgba(0, 240, 255, 0.3)",
        "50%": "box-shadow: 0 0 20px rgba(0, 240, 255, 0.6)"
      }
    },
    "scan_line": {
      "animation": "scan 3s ease-in-out infinite",
      "keyframes": {
        "0%": "transform: translateY(-100%)",
        "100%": "transform: translateY(100%)"
      }
    },
    "marquee": {
      "animation": "scroll 30s linear infinite",
      "keyframes": {
        "0%": "transform: translateX(0)",
        "100%": "transform: translateX(-50%)"
      }
    }
  },
  "visual_effects": {
    "glassmorphism": {
      "backdrop_filter": "blur(16px) saturate(180%)",
      "background": "rgba(255, 255, 255, 0.05)",
      "border": "1px solid rgba(255, 255, 255, 0.1)"
    },
    "neo_brutalism": {
      "border": "1px solid #2D2D2D",
      "border_radius": "0px",
      "box_shadow": "4px 4px 0px #00F0FF"
    },
    "neon_glow": {
      "text_shadow": "0 0 10px currentColor, 0 0 20px currentColor",
      "filter": "drop-shadow(0 0 5px currentColor)"
    },
    "gradient_text": {
      "background": "linear-gradient(135deg, #00F0FF 0%, #FF007A 100%)",
      "background_clip": "text",
      "text_fill_color": "transparent"
    }
  },
  "accessibility": {
    "contrast_ratios": {
      "min_body_text": "7:1",
      "min_large_text": "4.5:1",
      "min_ui_components": "3:1"
    },
    "focus_states": {
      "outline": "2px solid #00F0FF",
      "outline_offset": "2px",
      "border_radius": "0px"
    },
    "reduced_motion": {
      "respect_prefers_reduced_motion": true,
      "fallback": "No animations, instant transitions"
    }
  },
  "implementation_guidelines": {
    "critical_rules": [
      "All accent colors must meet WCAG AAA contrast requirements against dark backgrounds",
      "Use CSS Grid for bento layouts with fallbacks for older browsers",
      "Implement proper image lazy loading with blur-up placeholders",
      "All interactive elements must have :hover, :focus, and :active states",
      "Typography scale must be fluid using clamp() for responsive sizing",
      "Implement dark mode as default with optional light mode toggle",
      "All gradients must be subtle and enhance readability, never compromise it",
      "Use CSS custom properties for all colors to enable easy theming",
      "Ensure all neon effects are performant using CSS filters over box-shadow where possible"
    ],
    "cursor_prompts": {
      "homepage_refactor": "Implement a 12-column Bento Grid layout for the homepage. Featured article spans 8 columns with 16:9 aspect ratio, side panel spans 4 columns. Apply The Verge-style gradient overlay on featured images. Use glassmorphism for navigation with backdrop-blur-md. Below the fold, implement TechCrunch-style dense list layout for 'Latest News' with 1px separators.",
      "typography_update": "Apply Inter Tight (weights 600-900) for all headlines and headers. Use IBM Plex Serif (400-600) for article body text to match Wired's editorial authority. JetBrains Mono for technical metadata and timestamps. Implement fluid typography using clamp() for all heading levels. Add gradient text treatment to hero titles using linear-gradient(135deg, #FFFFFF 0%, #00F0FF 100%).",
      "color_system": "Replace all colors with the Nexus Palette. Primary background: #0A0A0B, cards: #16161A. Use #00F0FF (cyber blue) for all security-related elements, #FF007A (neon pink) for gaming tags and breaking news, #39FF14 (grid green) for tech innovation, #B026FF (electric purple) for AI/ML content. All accent colors must have hover states and dim variants for backgrounds.",
      "card_components": "Create four card variants: featured_card (no border-radius, 1px solid border, gradient image overlay, hover lifts 4px with cyan glow), glass_card (backdrop-blur-md, rgba background), minimal_card (transparent bg, border-bottom only), standard_card (solid bg with subtle hover). All cards must have neo-brutalist aesthetic with 0px border-radius.",
      "navigation_header": "Implement sticky navigation with glassmorphism (backdrop-blur-16px, rgba(10,10,11,0.8) background). Logo uses gradient text effect. Navigation links are #D1D1D6 with #00F0FF hover state and 2px bottom border active indicator. Mobile menu slides in from right with overlay. Height: 72px.",
      "hero_section": "Create asymmetric bento grid hero: Main featured post (8 columns) with 16:9 aspect ratio, full-width image with gradient overlay (linear-gradient(180deg, transparent 0%, rgba(10,10,11,0.9) 100%)). Add The Verge-style angled gradient overlay (linear-gradient(45deg, rgba(0,240,255,0.2) 0%, transparent 60%)). Side panel (4 columns) contains 2 stacked cards. Hover effects: scale 1.05 on image, neon border glow.",
      "breaking_news_ticker": "Create full-width marquee with #FF007A background, 48px height, white text. Implement infinite horizontal scroll animation (marquee 30s linear infinite). Each news item separated by â€¢ bullet. Breaking badge pulses with animation.",
      "category_tags": "Implement category-specific color coding: Tech (#39FF14 green), Security (#00F0FF cyan), Gaming (#FF007A pink), AI (#B026FF purple). Tags use 15% opacity background, 30% opacity border, full color text. Padding: 0.375rem 0.75rem, uppercase, 0.75rem font size, 600 weight, 0px border-radius.",
      "feed_layouts": "Create three feed layouts: (1) Dense List (TechCrunch-style): 1px gap, #27272A separator, 80px thumbnails, inline metadata. (2) Magazine Grid (The Verge-style): 3 columns on desktop, 2rem gap, featured_card components, 16:9 images. (3) Timeline (Wired-style): Single column, 720px max-width, serif typography, 2rem spacing, 1px solid separators."
    },
    "responsive_behavior": {
      "mobile": "Stack to 1 column, reduce spacing to 1rem, hide sidebars, simplify navigation to hamburger menu",
      "tablet": "2-column layouts where appropriate, 1.5rem spacing, show compressed sidebar",
      "desktop": "Full 12-column grid, all features visible, optimal reading width for articles (720px)",
      "wide": "Constrain content to 1440px with balanced margins, scale up imagery"
    }
  },
  "competitor_analysis": {
    "the_verge": {
      "adopted_features": [
        "Modular bento grid hero layout",
        "Angled gradient overlays on featured images",
        "Bold sans-serif typography for headlines",
        "Asymmetric column spanning in grid",
        "Neon accent color highlights",
        "Hover effects with scale and glow"
      ],
      "improvements": "Applied more aggressive neon cyberpunk aesthetic to differentiate from Verge's cleaner look"
    },
    "wired": {
      "adopted_features": [
        "Serif typography for article body (authority/editorial)",
        "High-contrast dark theme",
        "Neo-brutalist sharp edges and borders",
        "Section header typography treatment",
        "Long-form content layouts",
        "Timeline-style article feeds"
      ],
      "improvements": "Integrated more gaming/security-specific color accents vs. Wired's more conservative palette"
    },
    "techcrunch": {
      "adopted_features": [
        "High-density news list layouts",
        "Breaking news ticker/marquee",
        "Compact metadata presentation",
        "Fast-scanning card layouts",
        "Real-time content indicators"
      ],
      "improvements": "Enhanced visual hierarchy with better typography and more breathing room between dense elements"
    },
    "ars_technica": {
      "adopted_features": [
        "Consistent card design patterns",
        "Technical precision in typography",
        "Monospace font for metadata",
        "Clean information architecture",
        "Focus on readability"
      ],
      "improvements": "Added more visual excitement through gradients and neon accents while maintaining technical credibility"
